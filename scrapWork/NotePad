var cardName = $('<h1>')
$(cardName).attr('id', 'char-name').text('Character Name:');
$(playerScreen).append(cardName);

var cardPic = $('<img>')
$(cardPic).attr('id', 'avi-preview');
$(playerScreen).append(cardPic);

var cardHealthAcc = $('<p>')
$(cardHealthAcc).attr('id', 'health').text('Health/Accuracy:');
$(playerScreen).append(cardHealthAcc);

